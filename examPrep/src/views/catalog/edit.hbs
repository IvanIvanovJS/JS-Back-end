<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Blog</h1>
        <form method="post">
            <label>Title:</label>
            <input name="title" type="text" id="name" value="{{data.title}}">

            <label>Image:</label>
            <input name="imageUrl" type="text" id="image" value="{{data.imageUrl}}">

            <label>Content:</label>
            <textarea id="content" name="content">{{data.content}}</textarea>

            <label>Blog Category:</label>
            <input name="category" type="text" id="catelory" value="{{data.category}}">

            <input type="submit" id="btn" value="EDIT">
        </form>
    </div>
</section>