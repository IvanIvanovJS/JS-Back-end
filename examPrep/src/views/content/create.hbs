{{setTitle 'Create content page'}}
<section id="create-container">
    <div class="create-container-info">
        <h1>Create Blog</h1>
        <form method="post">
            <label>Title:</label>
            <input name="title" type="text" id="title" value="{{content.title}}">

            <label>Image:</label>
            <input name="imageUrl" type="text" id="image" placeholder="http://..." value="{{content.imageUrl}}">

            <label>Content:</label>
            <textarea id="content" name="content">{{content.content}}</textarea>

            <label>Blog Category:</label>
            <input name="category" type="text" id="category" value="{{content.category}}">

            <input type="submit" id="btn" value="POST">
        </form>
    </div>
</section>