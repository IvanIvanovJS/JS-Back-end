{{setTitle 'Search page'}}

<div class="search-form-container">
    <form id="searchForm" class="search-form" method="post">
        <label for="name">Planet Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter planet name" value="{{name}}">

        <label for="solarSystem">Solar System:</label>
        <input type="text" id="solarSystem" name="solarSystem" placeholder="Enter solar system" value="{{solarSystem}}">

        <button type="submit">Search</button>
    </form>
</div>

<div id="searchResults" class="search-results hidden">
    <h2>Matching Planets:</h2>
    <!-- Sample result - dynamically generated -->
    {{#each data}}
    <div class="planet-result">
        <img src="{{imageUrl}}" alt="{{name}}" class="planet-img">
        <div class="planet-info">
            <p><strong>Name:</strong> {{name}}</p>
            <p><strong>Solar System:</strong> {{solarSystem}}</p>
            <a class="detail-btn" href="/catalog/{{_id}}/details">Details</a>
        </div>
    </div>
    {{else}}
    <p class="no-matches">There are no planets found yet!</p>
    {{/each}}

</div>