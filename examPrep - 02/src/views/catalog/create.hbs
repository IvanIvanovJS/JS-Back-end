{{setTitle 'Create page'}}

<main class="create">
    <!-- Create Page (Only for logged-in users) -->
    <section id="create">
        <div class="form">
            <h2>Add item</h2>
            <form class="create-form" method="post">
                <input type="text" name="name" id="name" placeholder="Name" value='{{catalog.name}}' />
                <input type="text" name="year" id="years" placeholder="Years" value='{{catalog.years}}' />
                <input type="text" name="kind" id="kind" placeholder="Kind" value='{{catalog.kind}}' />
                <input type="text" name="imageUrl" id="animal-img" placeholder="Image url"
                    value='{{catalog.imageUrl}}' />
                <input type="text" name="need" id="needs-of" placeholder="Needs of" value='{{catalog.need}}' />
                <input type="text" name="location" id="location" placeholder="Location" value='{{catalog.location}}' />
                <textarea id="description" placeholder="Description..."
                    name="description">{{catalog.description}}</textarea>

                <button type="submit">Post</button>
            </form>
        </div>
    </section>
</main>