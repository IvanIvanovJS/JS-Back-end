{{setTitle 'Details page'}}
<main class="details">
    <!-- Details page -->
    <section id="details">
        <div id="details-wrapper">
            <p id="details-title">Name: {{data.name}}</p>
            <div id="img-wrapper">
                <img src="{{data.imageUrl}}" alt="{{data.name}}" />
            </div>
            <div id="info-wrapper">
                <table>
                    <tr>
                        <td>
                            <p>
                                Origin: <span id="details-origin">{{data.origin}}</span>
                            </p>
                        </td>
                        <td>
                            <p>Role: <span id="details-role">{{data.role}}</span></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>Symbol / Attribute: <span id="details-symbol">{{data.symbol}}</span></p>
                        </td>
                        <td>
                            <p>Era: <span id="details-era">{{data.era}}</span></p>
                        </td>
                    </tr>
                </table>
                <p>Description:
                    <span id="details-description">
                        {{data.description}}
                    </span>
                </p>
            </div>
            {{#if isAuthenticated}}
            <!--Edit and Delete are only for creator-->
            <div id="action-buttons">
                {{#if isOwner}}
                <a href="/catalog/{{data._id}}/edit" id="edit-btn">Edit</a>
                <a href="/catalog/{{data._id}}/delete" id="delete-btn">Delete</a>
                {{else}}
                {{#if isLiked}}
                <p id="already-liked">You've already liked this legend!</p>
                {{else}}
                <a href="/catalog/{{data._id}}/like" id="like-btn">Like</a>
                {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </div>
    </section>
</main>